{
  "name": "spark-ai",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "dist": "electron-builder --publish always"
  },
  "dependencies": {
    "node-fetch": "^2.7.0",
    "dotenv": "^16.4.5"
  },
  "devDependencies": {
    "electron": "^32.1.2",
    "electron-builder": "^23.0.0",
    "electron-reload": "^2.0.0-alpha.1"
  },
  "build": {
    "appId": "com.natedemoss.sparkai",
    "productName": "Spark AI",
    "files": [
      "**/*"
    ],
    "directories": {
      "output": "newest"
    },
    "mac": {
      "category": "public.app-category.utilities"
    },
    "win": {
      "target": "nsis",
      "icon": "build/logo.ico"
    },
    "linux": {
      "target": "AppImage",
      "icon": "build/logo.png"
    }
  }
}
